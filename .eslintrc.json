{
    "extends": "airbnb",
    "globals": {
        "window": true,
        "document": true
    },
    "rules": {
        "react/no-danger": 0,
        "linebreak-style": 0,
        "global-require": 0,
        "import/no-cycle": 0,
        "jest/globals": 0,
        "no-undef": 0,
        "eslint-linebreak-style": [
            0,
            "error",
            "windows"
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prop-types": 0
    },
    "overrides": [
        {
            "files": [
                "*/.spec.js",
                "*/.spec.jsx",
                "*/.test.js",
                "*/.test.jsx"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}